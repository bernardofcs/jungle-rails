<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>
  <% if product.reviews.count > 0 %>
      <span class="average"><%= a = 'Average Rating: ' + ('%.1f' % product.reviews.average(:rating)).to_s + '/10' %></span>
    <% else %>
      <span class="average">No Reviews</span>
    <% end %>
  <footer class="actions">
    <% if product.quantity > 0 %>
      <%= link_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary', method: :put do %>
        <%= fa_icon "shopping-cart", text: 'Add' %>
      <% end %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>
  <% if product.quantity == 0 %>
    <aside class="badge">
      SOLD OUT!
    </aside>
  <% end %>
  
</article>
